{
    "exclude": ["node_modules", "./configs"],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "Src/*": ["src/*"]
        },
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    }
}
